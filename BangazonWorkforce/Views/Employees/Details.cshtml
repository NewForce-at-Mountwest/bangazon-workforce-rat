@model BangazonWorkforce.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsSuperVisor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsSuperVisor)
        </dd>
        <dl>
            @* If the current computer is not null, then show it in the view. Otherwise, it will state NO Assigned Computers *@
            @if (@Model.CurrentComputer != null)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CurrentComputer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CurrentComputer.Make)  @Html.DisplayFor(model => model.CurrentComputer.Manufacturer)
                </dd>
            }
            else
            {
                <dt class="col-sm-2">
                    Current Computer
                </dt>
                <dd>No Assigned Computer</dd>
            }
        </dl>

        <dl>
            @*If the training programs list is not null, then show it in the view. Otherwise, it will state the employee is not enrolled in any programs.*@
            <dt class="col-sm-2"> Training Programs
            </dt>
            @foreach (TrainingProgram trainingProgram in Model.TrainingPrograms)
            {

                @if (@Model.TrainingPrograms != null)

                {


                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => trainingProgram.Name)
                    </dd>
                }
                else
                {
                    
                    <dd>Not Enrolled In Training Programs</dd>
                }
            }
        </dl>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
